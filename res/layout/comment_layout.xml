<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.alexzh.circleimageview.CircleImageView
        android:background="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/civ_image_profile"
        android:src="@drawable/profile"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <TextView
        android:id="@+id/tv_name_profile"
        android:textColor="#000"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/civ_image_profile"
        android:textSize="15sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_time_comment"
        app:layout_constraintLeft_toRightOf="@+id/civ_image_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_profile"
        android:textSize="8sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_title_comment"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/civ_image_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_comment"/>
</android.support.constraint.ConstraintLayout>